User Function MA103BUT()

Local aArea := GetArea()
Local aUsButtons := {}

If l103Visual
	AAdd(aUsButtons,{"BUDGET", {|| u_VisPedCom()},"Pedido de Compra","Pedido de Compra"})
Endif

RestArea(aArea)

Return(aUsButtons)

