User Function VisPedCom()

Local xPedido := GdFieldGet("D1_PEDIDO",n)

If !Empty(xPedido)
	DbSelectArea("SC7")
	DbSetOrder(1)
	If DbSeek( xFilial("SC7") + xPedido )
		nRecSC7 := SC7->(Recno())
		A103VisuPC(nRecSC7)
	Endif
Else
	MsgInfo("Pedido de Compra não associado.")
Endif

Return
